.chat-main
  .chat-main__header
    .group-info
      %p.group-info__name
        group.name
      %p.group-info__member
        member : name 
    = link_to "#", class:"chat-main__header__edit-btn" do 
      Edit
  .chat-main__messages
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .new-message
        .new-message__input-box
          = f.text_field :body, class: 'new-message__input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'new-message__input-box__image' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'new-message__input-box__image__file'
        = f.submit 'Send', class: 'new-message__submit-btn'
        

    