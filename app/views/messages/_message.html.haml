.message-box{data: {message: {id: message.id}}}
  .message-box__info
    %p.message-box__info__name
      = message.user.name
    %p.message-box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  - if message.body.present?
    %p.message-box__text
      = message.body
    - if message.image.present?
      = image_tag message.image.url  
