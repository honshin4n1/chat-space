.side-bar
  .side-bar__header
    .side-bar__header__box
      %p.side-bar__header__box__user-name
        = current_user.name
      %ul.side-bar__header__box__icons
        %li
          = link_to new_group_path do
            = icon('fa', 'edit', class:"side-bar__header__box__icons__edit")
        %li    
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog', class:"side-bar__header__box__icons__new-group")

  .side-bar__group-list
    - current_user.groups.each do |group| 
      .group-list__box
        = link_to '#' do
          %p.group-list__box__name
            = group.name

          %p.group-list__box__message
            まだメッセージはありません
   